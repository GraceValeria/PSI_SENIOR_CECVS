@using PsiSeniorGestaoPessoas.Site.Models

@model HomeIndexViewModel

<div class="modal fade" role="dialog" id="modalCadastroCoordenacao" tabindex="-1" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    <span class="fas fa-microchip" aria-hidden="true">
                    </span>&nbsp; Adicionar Coordenação
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-12">
                            <label class="">Coordenações</label>
                            <select class="form-control selectpicker" id="CadastroCoordenacao" title="Coordenacoes" multiple data-live-search="true" data-actions-box="false">
                                @*@foreach (var empregado in Model.Empregados)
                        {
                            <option value="@(empregado.Matricula)" title="@(empregado.Matricula)">@(empregado.Nome)</option>
                        }*@
                            </select>
                        </div>

                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h5 class="panel-title text-center">Cadastro</h5>
                    </div>

                    <div class="panel-body" id="adicionarCoordenacoes">

                        <div class="form-group col-12">
                            <label for="NomeCoordenacao">Nome Coordenação</label>
                            <input type="text" class="form-control" id="NomeCoordenacao" placeholder="Nome da Coordenação">
                        </div>

                        <div class="form-group col-12">
                            <label for="CaixaPostal">Caixa PostaL</label>
                            <input type="email" class="form-control" id="CaixaPostal" aria-describedby="emailHelp" placeholder="Caixa Postal da Coordenação">
                            @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
                        </div>
                    </div>

                </div>
            </div>

            <div class="modal-footer">
                <div class="form-group text-center">
                    <div class="col-lg-12">
                        <button class="btn btn-info" type="button" onclick="homeIndex.adicionarNovaCoordenacao()">Cadastrar</button>
                        <button class="btn btn-default" type="button" data-dismiss="modal" id="cancelar">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>