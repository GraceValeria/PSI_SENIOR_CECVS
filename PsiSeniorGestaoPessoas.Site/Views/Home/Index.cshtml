@model PsiSeniorGestaoPessoas.Site.Models.HomeIndexViewModel
<div class="row">
    <div class="col-lg-6 col-md-6" style="padding-top:20px">
        <button class="btn btn-info pull-right cadastrar" type="button" onclick="homeIndex.abrirModalCadastroEmpregado()">
            <span class="fas fa-users" aria-hidden="true">
            </span>&nbsp; Cadastrar Empregados
        </button>
        <button class="btn btn-default pull-right cadastrar" type="button" onclick="javascript: $('.cadastrar').toggle()" style="display:none">Cancelar</button>
    </div>
    <div class="col-lg-6 col-md-6 " style="padding-top:20px">
        <button class="btn btn-info float-right cadastrar" type="button" onclick="homeIndex.abrirModalCadastroCoordenacao()">
            <span class="fas fa-microchip" aria-hidden="true">
            </span>&nbsp; Cadastrar Coordenacao
        </button>
        <button class="btn btn-default pull-right cadastrar" type="button" onclick="javascript: $('.cadastrar').toggle()" style="display:none">Cancelar</button>
    </div>
</div>
<div class="col-lg-12">
    <hr />
</div>

<div id="mensagemView"></div>


@Html.Partial("_ModalCadastroCoordenacao")
@Html.Partial("_ModalCadastroEmpregado")
<div class="modal fade" role="dialog" id="modalEditarCoordenacao" tabindex="-1" style="display: none;"></div>
<div class="modal fade" role="dialog" id="modalEditarEmpregado" tabindex="-1" style="display: none;"></div>


<div class="content">
    <div id="equipesDeCoordenacoes" class="row">
    </div>
</div>


@Html.HiddenFor(model => model.CoordenacoesJson)

<table id="listaCoordenacoes" class="table table-striped display compact" style="background: white;">
    </table>


<script src="~/Scripts/Home/HomeIndex.js"></script>