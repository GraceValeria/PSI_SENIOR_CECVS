@using PsiSeniorGestaoPessoas.Site.Models

@model HomeIndexViewModel

<div class="modal fade" role="dialog" id="modalCadastroEmpregado" tabindex="-1" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-center">
                    <span class="fas fa-users" aria-hidden="true">
                    </span>&nbsp; Adicionar Empregado
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-12">
                            <label class="">Empregados</label>
                            <select class="form-control selectpicker" id="CadastroEmpregado" title="Empregados" multiple data-live-search="true" data-actions-box="false">
                                @*@foreach (var empregado in Model.Empregados)
                                {
                                    <option value="@(empregado.Matricula)" title="@(empregado.Matricula)">@(empregado.Nome)</option>
                                }*@
                            </select>
                        </div>
                        
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h5 class="panel-title text-center">Cadastro</h5>
                    </div>
                    <div class="panel-body" id="adicionarEmpregados">

                        <div class="form-group col-12">
                            <label for="NomeEmpregado">Nome Empregado</label>
                            <input type="text" class="form-control" id="NomeEmpregado" placeholder="Nome Completo Empregado" title="Nome Completo Empregado">
                        </div>

                        <div class="form-group col-12">
                            <label for="Matricula">Matricula</label>
                            <input type="text" class="form-control input9Digitos" id="Matricula" title="Matricula com dígito" placeholder="C000000-0">
                            @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <div class="form-group text-center">
                    <div class="col-lg-12">
                        <button class="btn btn-info" type="button" onclick="homeIndex.adicionarEmpregadosListados()"><span class="fa fa-plus"></span>&nbsp; Cadastrar</button>
                        <button class="btn btn-default" type="button" data-dismiss="modal" id="cancelar">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>